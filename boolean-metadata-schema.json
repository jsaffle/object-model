{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://raw.githubusercontent.com/jsaffle/object-model/main/boolean-metadata-schema.json",
	"title": "Boolean type metadata schema",
	"description": "",
	"properties":
	{
		"metadataPrefix":
		{
			"$comment": ".",
			"const": "boolean-metadata"
		},
		"valuePrefix":
		{
			"$comment": ".",
			"const": "boolean"
		},
		"default":
		{
			"$comment": ".",
			"type": "string",
			"pattern": "^(([tT][rR][uU][eE])|([fF][aA][lL][sS][eE])|([yY][eE][sS])|([nN][oO])|([oO][nN])|([oO][fF][fF])|(([iI][nN])?[vV][aA][lL][iI][dD]))$"
		},
		"usePrimitive":
		{
			"$comment": "",
			"type": "boolean",
			"default": false
		},
		"formatSpecifier":
		{
			"$comment": "",
			"type": "string",
			"pattern": "^%.+$"
		},
	},
	"additionalProperties": false
}
